{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declarationDir": "dist-types"
  },
  "include": ["src"],
  "exclude": [
    "**/node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "**/tests/**/*.ts",
    "**/tests/**/*.tsx"
  ]
}
