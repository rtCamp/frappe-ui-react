{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "dist-types",
    "sourceMap": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@rtcamp/*": ["packages/frappe-ui-react/src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/node_modules",
    "dist",
    "dist-types",
    "src/utils/tailwind.config.cjs",
    "**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/tests/**/*.ts",
    "**/tests/**/*.tsx"
  ]
}
