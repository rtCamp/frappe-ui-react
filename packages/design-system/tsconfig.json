{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "declarationDir": "dist",
    "composite": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/tests/**/*.ts",
    "**/tests/**/*.tsx",
    "**/dist/**/*",
    "**/dist-types/**/*",
    "**/stories/**"
  ]
}
